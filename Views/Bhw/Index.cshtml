@model BarangayProject.Models.BhwModel.BhwDashboardVm
@using BarangayProject.Models.AdminModel

@{
    Layout = "~/Views/Shared/_BhwLayout.cshtml";
    ViewData["Title"] = "Dashboard";

    var totalPop = Model.TotalPopulation;
    var totalHh = Model.TotalHouseholds;
    var totalFemale = Model.TotalFemale;
    var totalMale = Model.TotalMale;

    var trendLabels = Model.TrendLabels ?? new List<string>();
    var trendValues = Model.TrendValues ?? new List<int>();

    var recent = Model.RecentActivities ?? new List<DashboardViewModel>();
}

<style>
    /* Make all cards same height */
    .stat-card {
        height: 128px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        border-radius: 14px;
    }

    /* Chart container with fixed height */
    .chart-container {
        height: 333px;
        position: relative;
    }

    #popTrend {
        width: 100% !important;
        height: 100% !important;
    }

</style>

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <br>
            <h2 class="fw-bold mb-1">Dashboard</h2>
        </div>
        <div class="text-muted small">
            <br>
            Updated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
        </div>
    </div>

    <!-- 4 statistic cards -->
    <div class="row g-3 mb-4">

        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3 stat-card">
                <h6 class="text-muted">Total Population</h6>
                <h2 class="fw-bold">@totalPop</h2>
                <span class="small text-muted">Household: @totalHh</span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3 stat-card">
                <h6 class="text-muted">Households</h6>
                <h2 class="fw-bold">@totalHh</h2>
                <span class="small text-muted">Active (non-archived)</span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3 stat-card">
                <h6 class="text-muted">Female</h6>
                <h2 class="fw-bold text-danger">@totalFemale</h2>
                <span class="small text-muted">
                    @(totalPop == 0 ? 0 : (int)((double)totalFemale / totalPop * 100))% of population
                </span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3 stat-card">
                <h6 class="text-muted">Male</h6>
                <h2 class="fw-bold text-primary">@totalMale</h2>
                <span class="small text-muted">
                    @(totalPop == 0 ? 0 : (int)((double)totalMale / totalPop * 100))% of population
                </span>
            </div>
        </div>

    </div>

    <!-- Charts row -->
    <div class="row g-3 mb-4">

        <!-- Population Trend -->
        <div class="col-md-8">
            <div class="card shadow-sm border-0 p-3">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="fw-bold">Population Trend</h5>
                        <span class="text-muted small">Last 6 months (real data)</span>
                    </div>
                    <span class="text-muted small">Current: <strong>@totalPop</strong></span>
                </div>

                <div class="chart-container mt-2">
                    <canvas id="popTrend"></canvas>
                </div>

                <small class="text-muted">Tip: hover bars to inspect month values.</small>
            </div>
        </div>

        <!-- Gender Distribution -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4">
                <div class="d-flex justify-content-between mb-4">
                    <h5 class="fw-bold mb-0">Gender Distribution</h5>
                    <span class="text-muted small">@totalPop Total people</span>
                </div>

                <div class="d-flex justify-content-center" style="height: 200px;">
                    <canvas id="genderPie"></canvas>
                </div>

                <div class="mt-3">
                    <div class="mb-2 d-flex justify-content-between small">
                        <span>Female</span>
                        <strong>@totalFemale (@((int)((double)totalFemale / Math.Max(totalPop, 1) * 100))%)</strong>
                    </div>
                    <div class="progress mb-3" style="height:7px;">
                        <div class="progress-bar bg-danger" style="width:@((double)totalFemale / Math.Max(totalPop, 1) * 100)%"></div>
                    </div>

                    <div class="mb-2 d-flex justify-content-between small">
                        <span>Male</span>
                        <strong>@totalMale (@((int)((double)totalMale / Math.Max(totalPop, 1) * 100))%)</strong>
                    </div>
                    <div class="progress" style="height:7px;">
                        <div class="progress-bar bg-primary" style="width:@((double)totalMale / Math.Max(totalPop, 1) * 100)%"></div>
                    </div>

                    <small class="text-muted d-block mt-2">
                        Note: Values are computed from resident records joined to households (non-archived).
                    </small>
                </div>
            </div>
        </div>

    </div>

    <!-- Recent Activity -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <h5 class="fw-bold mb-0">Recent Activity</h5>
                <span class="text-muted small">@recent.Count item(s)</span>
            </div>

            @if (!recent.Any())
            {
                <p class="text-muted mb-0">No recent activity.</p>
            }
            else
            {
                <ul class="list-group list-group-flush">
                    @foreach (var a in recent.Take(20))
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <div>
                                <div class="fw-semibold">@a.Details</div>
                                <div class="small text-muted">@a.Action</div>
                            </div>
                            <div class="small text-muted">
                                @a.Timestamp.ToString("yyyy-MM-dd HH:mm")
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>

</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    /* ========================
        POPULATION TREND CHART
       ======================== */
    (function () {
        const canvas = document.getElementById('popTrend');
        if (!canvas) return;

        const parent = canvas.parentElement.getBoundingClientRect();
        canvas.width = parent.width;
        canvas.height = parent.height - 20;

        const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(trendLabels));
        const values = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(trendValues));

        new Chart(canvas.getContext('2d'), {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    data: values,
                    backgroundColor: values.map((v, i) =>
                        i === values.length - 1 ? 'rgba(13,110,253,0.95)' : 'rgba(13,110,253,0.45)'
                    ),
                    borderRadius: 6,
                    maxBarThickness: 42
                }]
            },
            options: {
                responsive: false,
                animation: false,
                layout: { padding: { bottom: 20 } },
                plugins: { legend: { display: false } },
                scales: {
                    x: { grid: { display: false } },
                    y: { beginAtZero: true, ticks: { precision: 0 } }
                }
            }
        });
    })();

    /* ========================
       GENDER PIE CHART
       ======================== */
    (function () {
        const ctx = document.getElementById("genderPie");
        if (!ctx) return;

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ["Female", "Male"],
                datasets: [{
                    data: [@totalFemale, @totalMale],
                    backgroundColor: ["#dc3545", "#0d6efd"]
                }]
            },
            options: {
                cutout: "60%",
                plugins: { legend: { position: 'bottom' } }
            }
        });
    })();
</script>
