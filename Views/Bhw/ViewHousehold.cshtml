    // prefer explicit `from` query param (e.g. ?from=archived) so Back can return to the correct list
    var from = Context.Request.Query["from"].ToString();

    // helper to compute age from nullable DOB (returns null when unknown)
    Func<DateTime?, int?> ComputeAge = (dob) =>
    {
        if (!dob.HasValue) return null;
        var today = DateTime.Today;
        var birth = dob.Value.Date;
        var age = today.Year - birth.Year;
        if (today.Month < birth.Month || (today.Month == birth.Month && today.Day < birth.Day)) age--;
        return age >= 0 ? (int?)age : null;
    };

    string FormatDate = "MMM d, yyyy"; // e.g. Jan 2, 1990
}

