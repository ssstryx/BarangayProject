@using BarangayProject.Models.BhwModel
@model IEnumerable<Household>

@{
    Layout = "~/Views/Shared/_BhwLayout.cshtml";
    ViewData["Title"] = "Families";
    var currentSearch = ViewBag.CurrentSearch as string ?? "";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1 fw-bold">Families</h2>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="ArchivedFamilies" class="btn btn-outline-secondary">View Archive</a>
            <a asp-action="CreateFamily" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Add Family
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-2">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-2">@TempData["SuccessMessage"]</div>
    }

    <div class="row mb-3 mt-3">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Families", "Bhw")" class="d-flex" id="familiesSearchForm">
                <input id="familiesSearchInput" name="q" value="@(ViewBag.SearchQuery ?? currentSearch ?? "")" class="form-control me-2" placeholder="Type to search families..." autocomplete="off" />
                <button id="familiesSearchBtn" class="btn btn-primary me-2" type="submit">Search</button>
                <a class="btn btn-outline-secondary" href="@Url.Action("Families", "Bhw")">Clear</a>
            </form>
        </div>
    </div>

    <div class="card p-3 shadow-sm">
        <div class="table-responsive">
            <table id="familiesTable" class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width:120px;">Family ID</th>
                        <th style="width:260px;">Family Head</th>
                        <th style="width:160px;">Date Added</th>
                        <th style="width:200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var any = Model?.Any() ?? false;
                        if (!any)
                        {
                            <tr class="no-results-placeholder">
                                <td colspan="4" class="text-center py-4">
                                    <div class="no-results-box">No families found.</div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var h in Model)
                            {
                                <tr data-familyhead="@h.FamilyHead" data-id="@h.Id">
                                    <td class="text-mono small id-cell">@h.Id</td>
                                    <td>@h.FamilyHead</td>
                                    <td class="small text-muted">
                                        @(
                                                                    h.CreatedAt == default(DateTime) ? "-" :
                                                                    h.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")
                                                                    )
                        </td>
                        <td>
                            <a asp-action="ViewFamily" asp-route-id="@h.Id" class="btn btn-outline-primary btn-sm me-1">View</a>
                            <a asp-action="EditFamily" asp-route-id="@h.Id" class="btn btn-outline-warning btn-sm me-1">Edit</a>

                                        <form asp-action="ArchiveFamily" method="post" class="d-inline archive-form">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@h.Id" />
                                            <button type="button" class="btn btn-outline-danger btn-sm archive-btn" data-name="@h.FamilyHead">
                                                Archive
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                        }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .text-mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Segoe UI Mono", monospace;
    }

    .id-cell {
        color: #495057;
    }

    #familiesTable td,
    #familiesTable th {
        padding-left: 14px !important;
        padding-right: 14px !important;
    }

    #familiesTable td {
        font-size: 15px;
    }

    #familiesTable th {
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
    }

    /* 🔥 Full-width no results box fix */
    .no-results-placeholder td {
        padding: 0 !important;
        background: transparent !important;
    }

    .no-results-box {
        width: 100%;
        padding: 1.6rem 1rem;
        background: #f5f7fa;
        color: #6c757d;
        border-radius: 6px;
        font-size: 1rem;
        margin: 0 auto;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        (function () {

            const input = document.getElementById('familiesSearchInput');
            document.getElementById('familiesSearchBtn').addEventListener('click', function (e) {
                e.preventDefault();
                const url = new URL(window.location.href);
                url.searchParams.set('search', input.value || '');
                window.location.href = url.pathname + url.search;
            });
            input.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    document.getElementById('familiesSearchBtn').click();
                }
            });

            document.querySelectorAll('.archive-form').forEach(function (form) {
                const btn = form.querySelector('.archive-btn');
                btn.addEventListener('click', function () {
                    const name = btn.dataset.name || "this family";

                    Swal.fire({
                        title: 'Archive family?',
                        html: `Move <strong>${name}</strong> to archive?`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, archive',
                        cancelButtonText: 'Cancel',
                        confirmButtonColor: '#d33'
                    }).then(r => { if (r.isConfirmed) form.submit(); });
                });
            });

            const succ = '@(TempData["SuccessMessage"] ?? "")';
            const err = '@(TempData["ErrorMessage"] ?? "")';

            if (succ.trim() !== '') Swal.fire({ toast: true, position: 'top-end', icon: 'success', title: succ, timer: 2200, showConfirmButton: false });
            if (err.trim() !== '') Swal.fire({ toast: true, position: 'top-end', icon: 'error', title: err, timer: 2800, showConfirmButton: false });


                    (function() {
            const form = document.getElementById('familiesSearchForm');
            const input = document.getElementById('familiesSearchInput');
            const btn = document.getElementById('familiesSearchBtn');
            // URL of the controller action (keeps routing)
            const baseUrl = '@Url.Action("Families", "Bhw")';

            function doSearch() {
                const term = (input.value || '').trim();
                // controller expects `q` parameter, so send q=...
                const url = term ? baseUrl + '?q=' + encodeURIComponent(term) : baseUrl;
                window.location.href = url;
            }

            btn.addEventListener('click', function(e) {
                e.preventDefault();
                doSearch();
            });

            // allow Enter inside the input
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    doSearch();
                }
            });
        })();
    </script>
}
