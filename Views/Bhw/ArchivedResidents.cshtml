@model List<BarangayProject.Models.BhwModel.ResidentListVm>
@{
    Layout = "~/Views/Shared/_BhwLayout.cshtml";
    ViewData["Title"] = "Archived Residents";
}

<div class="container-fluid py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="fw-bold mb-1">Archived Residents</h2>
            <p class="text-muted mb-0">Restore archived residents for your sitio.</p>
        </div>
        <div>
            <a asp-action="Residents" class="btn btn-outline-secondary">Back to Residents</a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Resident ID</th>
                            <th>Household ID</th>
                            <th>Name</th>
                            <th>Sex</th>
                            <th>Occupation</th>
                            <th>Education</th>
                            <th>Date of Birth</th>
                            <th>Age</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr><td colspan="9" class="text-center text-muted py-3">No archived residents.</td></tr>
                        }
                        else
                        {
                            foreach (var r in Model)
                            {
                                <tr>
                                    <td>@r.Id</td>
                                    <td>@(r.HouseholdId?.ToString() ?? "-")</td>
                                    <td>@r.Name</td>
                                    <td>@r.Sex</td>
                                    <td>@r.Occupation</td>
                                    <td>@r.Education</td>
                                    <td>@(r.DateOfBirth?.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>@(r.Age.HasValue? r.Age.Value.ToString() : "-")</td>
                                    <td class="text-end">
                                        <form asp-action="RestoreResident" method="post" class="d-inline" onsubmit="return confirm('Restore this resident?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <button class="btn btn-sm btn-outline-success" type="submit" title="Restore">
                                                <i class="bi bi-arrow-counterclockwise"></i> Restore
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
