@using BarangayProject.Models.BhwModel
@model IEnumerable<Household>

@{
    Layout = "~/Views/Shared/_BhwLayout.cshtml";
    ViewData["Title"] = "Households";
    var currentSearch = ViewBag.CurrentSearch as string ?? "";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1 fw-bold">Households</h2>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="ArchivedHouseholds" class="btn btn-outline-secondary">View Archive</a>
            <a asp-action="CreateHousehold" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Add Household
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-2">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-2">@TempData["SuccessMessage"]</div>
    }

    <div class="row mb-3 mt-3">
        <div class="col-md-6">
            <form method="get" class="d-flex" id="householdsSearchForm" onsubmit="return false;">
                <input id="householdsSearchInput" name="search" value="@currentSearch" class="form-control me-2" placeholder="Type to search..." autocomplete="off" />
                <button id="householdsSearchBtn" class="btn btn-primary me-2">Search</button>
                <a class="btn btn-outline-secondary" href="@Url.Action("Households", "Bhw")">Clear</a>
            </form>
        </div>
    </div>

    <div class="card p-3 shadow-sm">
        <div class="table-responsive">
            <table id="householdsTable" class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width:120px;">Household ID</th>
                        <th style="width:260px;">Family Head</th>
                        <th style="width:160px;">Date Added</th>
                        <th style="width:200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var any = Model?.Any() ?? false;
                        if (!any)
                        {
                            <tr class="no-results-placeholder">
                                <td colspan="3" class="text-center text-muted py-4">No households found.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var h in Model)
                            {
                                var createdIso = h.CreatedAt != DateTime.MinValue
                                ? h.CreatedAt.ToString("o")
                                : "";

                                <tr data-familyhead="@h.FamilyHead" data-id="@h.Id">
                                    <td class="text-mono small id-cell">@h.Id</td>
                                    <td>@h.FamilyHead</td>
                                    <td class="small text-muted">
                                        @(
                                           h.CreatedAt == default(DateTime) ? "-" :
                                           h.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")
                                         )
                                    </td>
                                    <td>
                                        <a asp-action="ViewHousehold" asp-route-id="@h.Id" class="btn btn-outline-primary btn-sm me-1">View</a>
                                        <a asp-action="EditHousehold" asp-route-id="@h.Id" class="btn btn-outline-warning btn-sm me-1">Edit</a>

                                        <!-- Archive (soft-delete) -->
                                        <form asp-action="ArchiveHousehold" method="post" class="d-inline archive-form" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@h.Id" />
                                            <button type="button" class="btn btn-outline-danger btn-sm archive-btn" data-name="@h.FamilyHead">Archive</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .text-mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", "Segoe UI Mono", monospace;
    }

    .id-cell {
        color: #495057;
    }

    #householdsTable td,
    #householdsTable th {
        padding-left: 14px !important;
        padding-right: 14px !important;
    }

    #householdsTable td {
        font-size: 15px;
    }

    #householdsTable th {
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        (function () {
            /***** Search button behavior (keep page fallback) *****/
            const input = document.getElementById('householdsSearchInput');
            document.getElementById('householdsSearchBtn').addEventListener('click', function (e) {
                e.preventDefault();
                const url = new URL(window.location.href);
                url.searchParams.set('search', input.value || '');
                window.location.href = url.pathname + url.search;
            });
            input.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    document.getElementById('householdsSearchBtn').click();
                }
            });

            /***** Archive confirmation (SweetAlert2) *****/
            document.querySelectorAll('.archive-form').forEach(function (form) {
                const btn = form.querySelector('.archive-btn');
                if (!btn) return;
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    const name = btn.getAttribute('data-name') || 'this household';
                    Swal.fire({
                        title: 'Archive household?',
                        html: `Move <strong>${name}</strong> to archive?`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, archive',
                        cancelButtonText: 'Cancel',
                        confirmButtonColor: '#d33'
                    }).then((result) => {
                        if (!result.isConfirmed) return;
                        // Submit the form (normal POST with antiforgery token)
                        form.submit();
                    });
                });
            });

            /***** Toasts from TempData (server messages) *****/
            const succ = '@(TempData["SuccessMessage"] ?? "")';
            const err = '@(TempData["ErrorMessage"] ?? "")';
            if (succ && succ.trim() !== '') {
                Swal.fire({ toast: true, position: 'top-end', icon: 'success', title: succ, showConfirmButton: false, timer: 2200 });
            } else if (err && err.trim() !== '') {
                Swal.fire({ toast: true, position: 'top-end', icon: 'error', title: err, showConfirmButton: false, timer: 2800 });
            }

            /***** Client-side simple filter (type to hide rows) *****/
            const table = document.getElementById('householdsTable');
            const tbody = table?.querySelector('tbody');
            function normalize(s) { return (s || '').toString().toLowerCase().trim(); }
            function filterRows() {
                const q = normalize(input.value);
                const rows = Array.from(tbody.querySelectorAll('tr')).filter(r => !r.classList.contains('no-results-placeholder'));
                let shown = 0;
                rows.forEach(r => {
                    const id = normalize(r.dataset.id);
                    const name = normalize(r.dataset.familyhead);
                    if (!q || id.includes(q) || name.includes(q)) {
                        r.style.display = '';
                        shown++;
                    } else {
                        r.style.display = 'none';
                    }
                });

                // placeholder
                let placeholder = tbody.querySelector('.no-results-placeholder');
                if (!placeholder) {
                    placeholder = document.createElement('tr');
                    placeholder.className = 'no-results-placeholder';
                    const td = document.createElement('td');
                    td.colSpan = 3;
                    td.className = 'text-center text-muted py-4';
                    td.innerText = 'No households found.';
                    placeholder.appendChild(td);
                    tbody.appendChild(placeholder);
                }
                placeholder.style.display = shown === 0 ? '' : 'none';
            }
            let debounce = null;
            input.addEventListener('input', () => {
                if (debounce) clearTimeout(debounce);
                debounce = setTimeout(filterRows, 120);
            });
            // run once to hide placeholder when rows exist
            filterRows();
        })();
    </script>
}
