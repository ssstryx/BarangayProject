@model BarangayProject.Models.Sitio

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Sitio";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (ViewBag.BHWCount != null)
            {
                <div class="alert alert-info">
                    @ViewBag.BHWCount @((int)ViewBag.BHWCount == 1 ? "BHW user" : "BHW user(s)") available to assign.
                </div>
            }

            <form asp-action="CreateSitio" method="post">
                @Html.AntiForgeryToken()

                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Assign BHW</label>
                            <select asp-for="AssignedBhwId" class="form-select" asp-items="ViewBag.BHWs">
                                <option value="">-- Unassigned --</option>
                            </select>
                            <div class="form-text">Choose a BHW to assign to this sitio (optional).</div>
                        </div>

                    </div>

                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="ManageSitios" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-success">Add Sitio</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
