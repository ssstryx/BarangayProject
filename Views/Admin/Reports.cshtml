@model ReportsViewModel
@using System.Text.Json

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Reports";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="fw-bold mb-1">Reports</h2>
        </div>
    </div>

    <!-- Filter / report selector card -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small">Report</label>
                    <select id="reportSelect" class="form-select">
                        <option value="users">Users</option>
                        <option value="sitios">Sitios</option>
                        <!-- add more report types if needed -->
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label small">Start date</label>
                    <input type="text" id="startDate" class="form-control" placeholder="YYYY-MM-DD" autocomplete="off" />
                </div>

                <div class="col-md-3">
                    <label class="form-label small">End date</label>
                    <input type="text" id="endDate" class="form-control" placeholder="YYYY-MM-DD" autocomplete="off" />
                </div>

                <div class="col-md-3 d-flex gap-2">
                    <button id="btnFetch" class="btn btn-primary w-100">Filter</button>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button id="exportCsv" class="btn btn-outline-secondary">Export CSV</button>
                <button id="exportExcel" class="btn btn-success">Export Excel</button>
                <button id="exportPdf" class="btn btn-danger">Export PDF</button>
            </div>
        </div>
    </div>

    <!-- Data table -->
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="reportTable" class="table table-sm table-hover mb-0">
                    <thead class="table-light">
                        <tr id="tableHeader"></tr>
                    </thead>
                    <tbody id="tableBody"></tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function () {
            // flatpickr for nicer date input (falls back to text if script fails)
            try {
                flatpickr("#startDate", { dateFormat: "Y-m-d", allowInput: true });
                flatpickr("#endDate", { dateFormat: "Y-m-d", allowInput: true });
            } catch (e) { }

            const reportSelect = document.getElementById('reportSelect');
            const startDate = document.getElementById('startDate');
            const endDate = document.getElementById('endDate');
            const btnFetch = document.getElementById('btnFetch');
            const exportExcel = document.getElementById('exportExcel');
            const exportPdf = document.getElementById('exportPdf');
            const exportCsv = document.getElementById('exportCsv');
            const tableHeader = document.getElementById('tableHeader');
            const tableBody = document.getElementById('tableBody');

            function buildQuery() {
                const params = new URLSearchParams();
                params.set('reportType', reportSelect.value || 'users');
                if (startDate.value) params.set('startDate', startDate.value);
                if (endDate.value) params.set('endDate', endDate.value);
                return params.toString();
            }

            function setTableColumns(columns) {
                tableHeader.innerHTML = '';
                columns.forEach(c => {
                    const th = document.createElement('th');
                    th.textContent = c;
                    tableHeader.appendChild(th);
                });
            }

            function setTableRows(rows, columns) {
                tableBody.innerHTML = '';
                rows.forEach(r => {
                    const tr = document.createElement('tr');
                    columns.forEach(c => {
                        const td = document.createElement('td');
                        // expect row keys to match column keys; if payload uses friendly labels map accordingly
                        let v = r[c] ?? r[c.toLowerCase()] ?? r[c.replace(/\s+/g, '')] ?? '';
                        if (typeof v === 'object' && v !== null) v = JSON.stringify(v);
                        td.textContent = v;
                        tr.appendChild(td);
                    });
                    tableBody.appendChild(tr);
                });
            }

            async function fetchAndRender() {
                const q = buildQuery();
                const url = `/Admin/GetReportData?${q}`;
                btnFetch.disabled = true;
                btnFetch.textContent = 'Loading...';
                try {
                    const res = await fetch(url, { credentials: 'same-origin' });
                    if (!res.ok) throw new Error('Failed to fetch: ' + res.status);
                    const payload = await res.json();
                    // payload expected shape: { columns: ["Col A","Col B"], rows: [ { "Col A": "v", "Col B": "v" }, ... ] }
                    setTableColumns(payload.columns || []);
                    setTableRows(payload.rows || [], payload.columns || []);
                } catch (err) {
                    console.error(err);
                    alert('Failed to load report data. Check console and network tab.');
                } finally {
                    btnFetch.disabled = false;
                    btnFetch.textContent = 'Filter';
                }
            }

            btnFetch.addEventListener('click', fetchAndRender);
            reportSelect.addEventListener('change', fetchAndRender);
            [startDate, endDate].forEach(inp => inp && inp.addEventListener('change', fetchAndRender));

            exportExcel.addEventListener('click', function () {
                const q = buildQuery();
                window.open(`/Admin/ExportReportExcel?${q}`, '_blank');
            });

            exportPdf.addEventListener('click', function () {
                const q = buildQuery();
                window.open(`/Admin/ExportReportPdf?${q}`, '_blank');
            });

            exportCsv.addEventListener('click', function () {
                const q = buildQuery();
                window.open(`/Admin/ExportReportCsv?${q}`, '_blank');
            });

            // initial load
            fetchAndRender();
        })();
    </script>
}
