@model IEnumerable<BarangayProject.Models.Sitio>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Sitios";
    var currentSearch = ViewBag.CurrentSearch as string ?? "";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1 fw-bold">Manage Sitios</h2>
        </div>
        <div>
            <a asp-action="CreateSitio" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Add Sitio
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-2">@TempData["ErrorMessage"]</div>
    }

    <div class="row mb-3 mt-3">
        <div class="col-md-6">
            <form id="sitioSearchForm" method="get" class="d-flex" onsubmit="return false;">
                <input id="sitioSearchInput" name="search" value="@currentSearch" class="form-control me-2" placeholder="Type to search..." autocomplete="off" />
                <button id="sitioSearchBtn" class="btn btn-primary">Search</button>
                <a class="btn btn-outline-secondary ms-2" href="@Url.Action("ManageSitios", "Admin")">Clear</a>
            </form>
        </div>
    </div>

    <div class="card p-3 shadow-sm">
        <table id="sitiosTable" class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Sitio ID</th>
                    <th>Sitio Name</th>
                    <th>Assigned BHW</th>
                    <th style="width:200px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var list = Model?.ToList() ?? new List<BarangayProject.Models.Sitio>();
                    if (!list.Any())
                    {
                        <tr class="no-results-placeholder">
                            <td colspan="4" class="text-center text-muted py-4">No sitios found.</td>
                        </tr>
                    }
                    else
                    {
                        int index = 1;
                        // order by DB Id to keep stable ordering; but we render index sequentially
                        foreach (var s in list.OrderBy(x => x.Id))
                        {
                            var bhwDisplay = s.AssignedBhw != null ? (string.IsNullOrWhiteSpace(s.AssignedBhw.DisplayName) ? s.AssignedBhw.UserName : s.AssignedBhw.DisplayName) : "";
                            <tr data-name="@s.Name" data-bhw="@bhwDisplay">
                                <td class="cell-index">@index</td>
                                <td class="cell-name">@s.Name</td>
                                <td class="cell-bhw">
                                    @if (!string.IsNullOrEmpty(bhwDisplay))
                                    {
                                        <span>@bhwDisplay</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unassigned</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditSitio" asp-route-id="@s.Id" class="btn btn-outline-primary btn-sm me-1">Edit</a>
                                    <form asp-action="DeleteSitio" method="post" class="d-inline delete-form">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@s.Id" />
                                        <button type="button" class="btn btn-outline-danger btn-sm delete-btn">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        (function () {
            // TempData toast
            const succ = '@(TempData["SuccessMessage"] ?? "")';
            const err = '@(TempData["ErrorMessage"] ?? "")';
            if (succ && succ.trim() !== '') {
                Swal.fire({ toast: true, position: 'top-end', icon: 'success', title: succ, showConfirmButton: false, timer: 2200 });
            } else if (err && err.trim() !== '') {
                Swal.fire({ toast: true, position: 'top-end', icon: 'error', title: err, showConfirmButton: false, timer: 2800 });
            }

            const input = document.getElementById('sitioSearchInput');
            const table = document.getElementById('sitiosTable');
            const tbody = table.querySelector('tbody');

            function normalize(s){ return (s || '').toString().toLowerCase().trim(); }

            function rowMatches(row, q) {
                if (!q) return true;
                const name = normalize(row.dataset.name);
                const bhw = normalize(row.dataset.bhw);
                const index = normalize(row.querySelector('.cell-index')?.innerText);
                return name.includes(q) || bhw.includes(q) || index.includes(q);
            }

            function filterRows() {
                const q = normalize(input.value);
                const rows = Array.from(tbody.querySelectorAll('tr')).filter(r => !r.classList.contains('no-results-placeholder'));
                let shown = 0;
                rows.forEach(r => {
                    if (rowMatches(r, q)) {
                        r.style.display = '';
                        shown++;
                    } else {
                        r.style.display = 'none';
                    }
                });

                // placeholder
                let placeholder = tbody.querySelector('.no-results-placeholder');
                if (!placeholder) {
                    placeholder = document.createElement('tr');
                    placeholder.className = 'no-results-placeholder';
                    const td = document.createElement('td');
                    td.colSpan = 4;
                    td.className = 'text-center text-muted py-4';
                    td.innerText = 'No sitios found.';
                    placeholder.appendChild(td);
                    tbody.appendChild(placeholder);
                }
                placeholder.style.display = shown === 0 ? '' : 'none';
            }

            let debounce = null;
            input.addEventListener('input', () => {
                if (debounce) clearTimeout(debounce);
                debounce = setTimeout(filterRows, 120);
            });

            document.getElementById('sitioSearchBtn').addEventListener('click', function (e) {
                e.preventDefault();
                const url = new URL(window.location.href);
                url.searchParams.set('search', input.value || '');
                window.location.href = url.pathname + url.search;
            });
            input.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    document.getElementById('sitioSearchBtn').click();
                }
            });

            function getAntiForgeryToken(form) {
                const tokenInput = form.querySelector('input[name="__RequestVerificationToken"]');
                return tokenInput ? tokenInput.value : null;
            }

            function removeRow(row) {
                row.remove();
                filterRows();
            }

            document.querySelectorAll('.delete-form').forEach(function (form) {
                const btn = form.querySelector('.delete-btn');
                if (!btn) return;
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    const row = form.closest('tr');
                    const name = row?.dataset.name || 'this sitio';

                    Swal.fire({
                        title: 'Delete sitio?',
                        html: `Delete <strong>${name}</strong>? This cannot be undone.`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, delete',
                        cancelButtonText: 'Cancel',
                        confirmButtonColor: '#d33'
                    }).then(async (result) => {
                        if (!result.isConfirmed) return;

                        const action = form.getAttribute('action') || window.location.href;
                        const formData = new FormData();
                        const idInput = form.querySelector('input[name="id"]');
                        if (idInput) formData.append('id', idInput.value);
                        const token = getAntiForgeryToken(form);
                        if (token) formData.append('__RequestVerificationToken', token);

                        try {
                            const resp = await fetch(action, {
                                method: 'POST',
                                body: formData,
                                credentials: 'same-origin',
                                headers: { 'X-Requested-With': 'XMLHttpRequest' }
                            });

                            if (!resp.ok) {
                                const txt = await resp.text().catch(()=>'');
                                Swal.fire('Error', txt || 'Delete failed on server.', 'error');
                                return;
                            }

                            removeRow(row);
                            Swal.fire({ toast: true, position: 'top-end', icon: 'success', title: 'Sitio deleted', showConfirmButton: false, timer: 1400 });
                        } catch (ex) {
                            console.error(ex);
                            Swal.fire('Error', 'Network error while deleting.', 'error');
                        }
                    });
                });
            });

            // initial filter run
            filterRows();
        })();
    </script>
}
