@model IEnumerable<BarangayProject.Models.AuditLog>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Recent Activity";
}

<div class="container-fluid py-4">
    <div class="card p-3">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h4 class="mb-0">Recent activity</h4>
            <small class="text-muted">Latest actions (most recent first)</small>
        </div>

        <ul class="list-group list-group-flush">
            @foreach (var a in Model)
            {
                var icon = a.Action?.Contains("Create") == true ? "bi-plus-circle text-success" :
                a.Action?.Contains("Delete") == true ? "bi-trash text-danger" :
                a.Action?.Contains("Edit") == true ? "bi-pencil text-warning" : "bi-info-circle";

                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div>
                        <i class="bi @icon me-2"></i>
                        <strong>@a.Action</strong>
                        <div class="small text-muted">@a.Details</div>
                        @if (!string.IsNullOrWhiteSpace(a.EntityType))
                        {
                            <div class="small">Entity: @a.EntityType @a.EntityId</div>
                        }
                    </div>
                    <div class="text-end small text-muted">
                        @a.EventTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
