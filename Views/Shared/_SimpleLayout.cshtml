@* SIMPLE LAYOUT FOR LOGIN & REGISTER PAGES — NO NAV BAR *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BarangayProject</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* ========== GENERAL LAYOUT ========== */
        body {
            background: #f2f4f8;
            font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .auth-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 48px 16px;
        }

        .auth-card {
            width: 100%;
            max-width: 480px;
            background: #fff;
            border-radius: 16px;
            padding: 40px 36px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

            .auth-card h2 {
                text-align: center;
                font-weight: 600;
                margin-bottom: 25px;
                font-size: 28px;
            }

            .auth-card .form-control {
                background: #f1f1f1;
                border: none;
                border-radius: 8px;
                height: 45px;
                padding: 10px 14px;
                font-size: 15px;
            }

                .auth-card .form-control:focus {
                    outline: none;
                    box-shadow: 0 0 0 2px #4a67e8;
                    background: #fff;
                }

            .auth-card .btn-primary {
                background-color: #5b7be3;
                border: none;
                border-radius: 8px;
                font-weight: 600;
                height: 48px;
                font-size: 16px;
            }

                .auth-card .btn-primary:hover {
                    background-color: #4868d8;
                }

        .auth-footer {
            text-align: center;
            margin-top: 14px;
            color: #6c757d;
        }

            .auth-footer a {
                color: #3f62c9;
                text-decoration: none;
                font-weight: 600;
            }

        /* ========== RESPONSIVE FIX (escaped @@media) ========== */
        @@media (max-width: 420px) {
            .auth-card {
                padding: 22px;
                max-width: 360px;
            }
        }
    </style>
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-card">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
