@using Microsoft.AspNetCore.Identity
@using BarangayProject.Models
@using BarangayProject.Data
@using Microsoft.EntityFrameworkCore
@using System.Text.RegularExpressions
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = null;

    // Load dynamic config same as admin
    var appDb = Context.RequestServices.GetService(typeof(ApplicationDbContext)) as ApplicationDbContext;

    string logoPath = "/images/logo.png";
    string siteLine1 = "Sta. Isabel";
    string siteLine2 = "Calapan City";

    if (appDb != null)
    {
        try
        {
            var allConfigs = appDb.SystemConfigurations.AsNoTracking().ToList();
            if (allConfigs.Count > 0)
            {
                var first = allConfigs.First();
                var t = first.GetType();

                var keyProp = t.GetProperties().FirstOrDefault(p => p.Name.Contains("Key", StringComparison.OrdinalIgnoreCase));
                var valProp = t.GetProperties().FirstOrDefault(p => p.Name.Contains("Value", StringComparison.OrdinalIgnoreCase));

                string GetCfg(string k)
                {
                    foreach (var c in allConfigs)
                    {
                        var key = keyProp?.GetValue(c)?.ToString();
                        if (string.Equals(key, k, StringComparison.OrdinalIgnoreCase))
                            return valProp?.GetValue(c)?.ToString();
                    }
                    return null;
                }

                var sysName = GetCfg("SystemName") ?? GetCfg("SiteName");
                var logo = GetCfg("LogoPath") ?? GetCfg("LogoFileName");

                if (!string.IsNullOrWhiteSpace(logo))
                {
                    if (logo.StartsWith("/")) logoPath = logo;
                    else logoPath = "/images/" + logo.TrimStart('/');
                }

                if (!string.IsNullOrWhiteSpace(sysName))
                {
                    var parts = sysName.Split(' ');
                    if (parts.Length >= 2)
                    {
                        siteLine1 = parts[0];
                        siteLine2 = string.Join(" ", parts.Skip(1));
                    }
                    else
                    {
                        siteLine1 = sysName;
                        siteLine2 = "";
                    }
                }
            }
        }
        catch { }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BHW Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        :root {
            --sidebar-width: 240px;
            --sidebar-top-color: #133a8a;
            --sidebar-bottom-color: #0b57d0;
        }

        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: var(--sidebar-width);
            background: linear-gradient(180deg, var(--sidebar-top-color), var(--sidebar-bottom-color));
            color: white;
            display: flex;
            flex-direction: column;
            box-shadow: 2px 0px 8px rgba(0,0,0,0.12);
        }

            .sidebar .inner {
                padding: 20px 12px;
                flex: 1 1 auto;
            }

            .sidebar .logo {
                text-align: center;
                margin-bottom: 8px;
            }

                .sidebar .logo img {
                    width: 110px;
                    border-radius: 50%;
                    border: 3px solid rgba(255,255,255,0.12);
                }

            .sidebar h4 {
                margin-top: 8px;
                font-weight: 600;
            }

        nav a {
            display: block;
            padding: 12px 20px;
            border-radius: 8px;
            color: rgba(255,255,255,0.92);
            text-decoration: none;
            margin-bottom: 4px;
            transition: background 0.15s;
            font-weight: 500;
        }

            nav a i {
                width: 22px;
            }

            nav a:hover {
                background: rgba(255,255,255,0.1);
            }

            nav a.active {
                background: #fff;
                color: #072054;
                font-weight: 700;
            }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 28px;
        }
    </style>
</head>

<body>

    @functions {
        private string IsActive(string action)
        {
            var current = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
            return string.Equals(current, action, StringComparison.OrdinalIgnoreCase) ? "active" : "";
        }
    }

    <div class="sidebar">
        <div class="inner">
            <div class="logo">
                <img src="@logoPath" alt="Logo" />
                <h4>@siteLine1 @siteLine2</h4>
            </div>

            <nav class="mt-3">
                <a asp-controller="Bhw" asp-action="Index" class="@IsActive("Index")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <a asp-controller="Bhw" asp-action="Households" class="@IsActive("Households")">
                    <i class="bi bi-people"></i> Households
                </a>

                <a asp-controller="Bhw" asp-action="Settings" class="@IsActive("Settings")">
                    <i class="bi bi-gear"></i> Settings
                </a>
            </nav>
        </div>

        <div class="p-3">
            <form asp-controller="Account" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="button" id="logoutButton" class="btn btn-light w-100 fw-semibold">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>


    <!-- Logout modal same as admin -->
    <div class="modal fade" id="logoutModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to logout?
                </div>
                <div class="modal-footer border-0">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button id="confirmLogout" class="btn btn-danger">Logout</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const logoutBtn = document.getElementById('logoutButton');
        const confirmBtn = document.getElementById('confirmLogout');
        const logoutForm = document.querySelector('form');

        const modal = new bootstrap.Modal(document.getElementById('logoutModal'));

        logoutBtn.addEventListener('click', () => modal.show());
        confirmBtn.addEventListener('click', () => logoutForm.submit());
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>
