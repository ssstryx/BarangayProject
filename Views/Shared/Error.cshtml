@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var msg = ViewBag.ErrorMessage as string ?? "An error occurred.";
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Something went wrong</h3>
                    <p class="card-text">@msg</p>
                    <a class="btn btn-primary" href="@Url.Action("Index", "Home")">Return home</a>
                </div>
            </div>
        </div>
    </div>
</div>