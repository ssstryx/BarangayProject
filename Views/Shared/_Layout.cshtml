@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var msg = ViewBag.ErrorMessage as string ?? "An unexpected error occurred.";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-4">
                    <h3 class="mb-3">Oops! Something went wrong</h3>

                    <p class="text-muted mb-4">@msg</p>

                    <!-- RELOAD BUTTON -->
                    <a href="javascript:location.reload()" class="btn btn-primary btn-lg w-100 mb-2">
                        Reload Page
                    </a>

                    <!-- OPTIONAL: Home button -->
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary w-100">
                        Go Back Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
